<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhouwei.md.materialdesignsamples.view.MyLinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shopTitle"
            android:drawableLeft="@mipmap/ic42_shop_blue"
            android:drawablePadding="@dimen/dim5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="shopName" />

        <View
            android:layout_margin="@dimen/dim5"
            android:background="@color/cf3f3f3"
            android:layout_width="match_parent"
            android:layout_height="2px" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvModel"
            tools:listitem="@layout/item_scheme_item_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.zhouwei.md.materialdesignsamples.view.MyLinearLayout>

</LinearLayout>